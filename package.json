{
  "name": "root",
  "private": true,
  "workspaces": [
    "tools/*",
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "husky": ">=1",
    "lerna": "^3.18.3",
    "lint-staged": ">=8",
    "prettier": "1.19.1",
    "rimraf": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna run --concurrency 1 --stream precommit"
    }
  },
  "scripts": {
    "build": "lerna run build",
    "lint-all": "prettier --check '**/*.{yml,yaml,json,md,html}'"
  },
  "lint-staged": {
    "*.{yml,yaml,json,md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
